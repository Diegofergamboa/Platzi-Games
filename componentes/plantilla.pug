//- Creando mixin
mixin caja(imagen,titulo,contenido)
	.caja 
	.caja__imagen: img(src="images/"+imagen)
	.caja__contenido 
		h3=titulo 
		p=contenido

doctype html
html(lang="en")
	include componentes/head.pug
	body
		header
			h1 #{titulo2}
			if usuario 
				a Hola #{usuario}
			else 
				a.boton Registro
    block contenidos